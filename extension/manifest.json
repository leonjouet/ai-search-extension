{
  "manifest_version": 3,
  "name": "Vinted Fashion Recommender",
  "version": "1.0.0",
  "description": "AI-powered fashion search for Vinted using CLIP embeddings",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "https://www.vinted.fr/*",
    "http://localhost:8000/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vinted Fashion Search",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.vinted.fr/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "content.css"],
      "matches": ["https://www.vinted.fr/*"]
    }
  ]
}
